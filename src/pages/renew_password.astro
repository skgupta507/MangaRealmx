---
import MainLayout from '../layouts/main.astro';

const code  = Astro.url.searchParams.get("code");

if (!code) return Astro.redirect("/");

---

<MainLayout title="Renew Password">
	<div class="fake-content"></div>
	<input readonly type="hidden" value={ code } class="code-inp">
</MainLayout>

<script>
	//@ts-ignore
	document.querySelector(".page-loader-con").style.display = "flex"

  setTimeout(function() {
		$(".account-button").click()
		$(".show-renew-btn").click()
		$(".page-loader-con").css("display", "none")
  }, 6000) 
</script>

<style lang="scss">
	.fake-content {
		height: 53vh;
	}
</style>